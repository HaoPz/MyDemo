<?xml version="1.0" encoding="utf-8"?> <!--Material Design 效果-->
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bottonNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f44336"
        android:padding="10dp"
        android:text="BottomNavigition"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@id/switchCompat" />

    <TextView
        android:id="@+id/switchCompat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f44336"
        android:padding="10dp"
        android:text="SwitchCompat"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toTopOf="@id/bottonNavigation" />

</android.support.constraint.ConstraintLayout>